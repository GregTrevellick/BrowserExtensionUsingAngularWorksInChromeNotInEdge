{
  "manifest_version": 2,
  "name": "BrowserExtensionUsingAngularWorksChromeNotEdge",
  "short_name": "BrowserExtensionUsingAngularWorksChromeNotEdge",
  "version": "1.0.0",
  "description": "BrowserExtensionUsingAngularWorksChromeNotEdge",
  "author": "Greg Trevellick",
  "homepage_url": "https://gregtrevellick.github.io/VisualStudioMarketplaceMetrics/",
  "page_action": {
    "default_icon": {
      "19": "icon_19x19.png"
    },
      "default_title": "BrowserExtensionUsingAngularWorksChromeNotEdge",
      "default_popup": "popup.html"
    },
  "background": {
    "scripts": [ "scripts/background.js" ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "http://marketplace.visualstudio.com/*",
        "https://marketplace.visualstudio.com/*"
      ],
      "js": [
        "scripts/contentscript.js",
        "scripts/angular.min.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "declarativeContent",
    "http://marketplace.visualstudio.com/",
    "https://marketplace.visualstudio.com/"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
